.product-material
    height: 580px
    &__wrap
        height: 580px
        padding-top: 38px
        position: relative
        &:before
            content: ""
            display: block
            position: absolute
            left: -382px
            bottom: 0
            width: 258px
            height: 336px
            background: no-repeat 0 0 url(../img/product-material/gloves.png)
            z-index: -100
        &:after
            content: ""
            display: block
            position: absolute
            right: -396px
            top: 0
            width: 450px
            height: 122px
            background: no-repeat 0 0 url(../img/product-material/towel.png)
            z-index: -100
        h2
            line-height: 1.2em
            text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.48)
    &__slider
        width: 100%
        min-height: 200px
        position: absolute
        right: 30px
        top: 235px
        &__text
            min-height: inherit
            width: 430px
            position: absolute
            top: 0
            right: 0
            h3
                font-size: 24px
                padding-top: 5px
                line-height: 1.3em
            p
                font-size: 16px
                line-height: 1.9em
        &__img
            padding-top: 29px
        &__item
            position: relative
@media (max-width: 1750px)
    .product-material__wrap
        &:before
            left: -300px
        &:after
            right: -300px
@media (max-width: 1560px)
    .product-material__wrap
        &:before
            left: -250px
        &:after
            right: -200px
@media (max-width: 1350px)
    .product-material__wrap
        &:before
            display: none
        &:after
            display: none
@media (max-width: 1030px)
    .theme-product-material .owl-controls
        right: -40px !important