.header
    background: url('../img/header/bg.png') center no-repeat
    &__wrap
        display: table
        width: 100%
        height: 44px
    &__left
        display: table-cell
        vertical-align: middle
    &__icon
        display: block
        margin: 0 15px
    &__right
        padding-top: 6px
        display: table-cell
        text-align: right
        vertical-align: middle
        float: right
        width: 306px
        a
            height: 28px !important
            text-align: center
            padding: 0 13px
            font-size: 14px
            border-radius: 10px
            line-height 28px
            display: inline-block
            float: left
    &__icon
        display: inline-block
    &__address, &__email, &__tel
        border-left: 1px solid #cbbdaf
        height: 44px
        line-height: 44px
    &__address
        display: inline-block
        padding-left: 14px
        padding-right: 10px
        font-size: 14px
        color: #4f391e
    &__email
        display: inline-block
        font-size: 13px
        color: #4f391e
        text-decoration: none
        padding-left: 16px
        padding-right: 10px
    &__tel
        display: inline-block
        font-size: 17px
        font-weight: 700
        color: #4f391e
        padding-left: 19px
        text-decoration: none
    &__question
        margin-left: 7px
        a
            display: inline-block