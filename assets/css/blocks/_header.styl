.header
    background: url('../img/header/bg.png') center no-repeat
    &__wrap
        display: table
        width: 100%
        height: 44px
    &__left
        display: table-cell
        vertical-align: middle
    &__right
        display: table-cell
        text-align: right
        vertical-align: middle
    &__icon
        display: inline-block
    &__address
        display: inline-block
    &__email
        display: inline-block
    &__tel
        display: inline-block