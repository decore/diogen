.header
    background: url('../img/header/bg.png') center no-repeat
    &__wrap
        display: table
        width: 100%
        height: 44px
    &__left
        display: table-cell
        vertical-align: middle
    &__icon
        display: block
        margin: 0 15px
    &__right
        display: table-cell
        text-align: right
        vertical-align: middle
    &__icon
        display: inline-block
    &__address
        display: inline-block
        padding-left: 15px
        font-size: 14px
        color: #4f391e
    &__email
        display: inline-block
        font-size: 13px
        color: #4f391e
        text-decoration: none
        padding-left: 30px
    &__tel
        display: inline-block
        font-size: 17px
        font-weight: 700
        color: #4f391e
        padding-left: 35px
        text-decoration: none
    &__question
        margin-left: 5px